<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permessi necessari per l'app e per le notifiche push -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/> <!-- Necessario per Android 13+ -->
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- Utile per le notifiche con vibrazione -->
    <!-- ✅ NUOVI PERMESSI PER MAPPA -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- ✅ NUOVI PERMESSI PER FOTOCAMERA -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- ✅ NUOVI PERMESSI PER AUDIO -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Le 'queries' e i permessi specifici di Firebase C2DM sono già gestiti dalle dipendenze, non serve ridichiararli qui -->
    <!-- Anche la permission con protectionLevel="signature" è gestita dalle librerie -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Students Life"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">

        <activity
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|smallestScreenSize|screenLayout|uiMode"
            android:name=".MainActivity"
            android:label="Students Life"
            android:theme="@style/AppTheme.NoActionBarLaunch"
            android:launchMode="singleTask"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Intent-filter per gestire l'apertura dell'app da una notifica push -->
            <!-- Questo permette all'app di ricevere dati dalla notifica quando viene cliccata -->
            <intent-filter>
                <action android:name="FCM_MESSAGE_CLICK" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>

        <!-- Meta-data per la configurazione delle notifiche Firebase -->
        <!-- Questi valori predefiniti saranno usati da FCM per le notifiche di sistema -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" /> <!-- L'icona della tua app -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/ic_launcher_background" /> <!-- Assicurati che questo colore esista in res/values/colors.xml -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="chat_messages" /> <!-- ID del canale di notifica predefinito, DEVE corrispondere al channelId nella tua Edge Function -->

        <!-- RIMUOVI COMPLETAMENTE QUALSIASI TAG <service> PER FCM CHE HAI AGGIUNTO MANUALMENTE QUI -->
        <!-- I servizi FCM (come com.capacitorjs.plugins.pushnotifications.MessagingService o com.google.firebase.messaging.FirebaseMessagingService) -->
        <!-- Vengono aggiunti automaticamente dalle dipendenze di Gradle e dalla fusione dei manifest. -->
        <!-- Aggiungerli manualmente qui causa duplicazioni e crash. -->

    </application>

</manifest>
